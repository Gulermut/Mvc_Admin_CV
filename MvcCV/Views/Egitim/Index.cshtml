@using MvcCV.Models.Entity;
@model List<TBLEGİTİM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var ıtem in Model)
    {
        <tr>
            <td> @ıtem.ID </td>
            <td> @ıtem.BASLIK </td>
            <td> @ıtem.ALTBASLIK1 </td>
            <td> @ıtem.ALTBASLIK2 </td>
            <td> @ıtem.TARİH </td>
            <td> @ıtem.GNO </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@ıtem.ID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Egitim/EgitimDüzenle/@ıtem.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
                
            </td>
        </tr>
       
    }

</table>
<a href="/Egitim/Egitimekle" class="btn btn-primary">Yeni Egitim Ekle</a>



